@model IEnumerable<PruebaTecnica.Models.ViewModels.ProductosOfertadosViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
          <a class="navbar-brand">Administrador</a>
          <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                  <li class="nav-item ml-3">
                      @Html.ActionLink("Ofertas", "Ofertas", "Administrador")
                  </li>
                  <li class="nav-item ml-3">
                      @Html.ActionLink("Agregar", "Crear2", "Administrador")
                  </li>

                  <li class="nav-item ml-3">
                      @Html.ActionLink("Cerrar Sesion", "Logout", "Account")
                  </li>
              </ul>
          </div>
        </nav>
    <div class="container body-content">
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Nombre</th>
                    <th>Tipo Producto</th>
                    <th>Fecha Ingreso</th>
                  
                </tr>
            </thead>
            <tbody>

                @foreach (var producto in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary" onclick="location.href='@Url.Action("Editar", "Administrador", new { id = producto.IdProducto })'">Editar</a>
                            <a class="btn btn-danger" onclick="location.href='@Url.Action("Eliminar", "Administrador", new { id = @producto.IdProducto})'">Borrar</a>
                        </td>


                        <td>
                            @producto.NombreProducto
                        </td>

                        <td>
                            @producto.TipoProducto
                        </td>

                        <td>
                            @producto.FechaIngreso
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</body>
</html>
