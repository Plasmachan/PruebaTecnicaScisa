@model PruebaTecnica.Models.Producto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
        <a class="navbar-brand">Administrador</a>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="nav-item ml-3">
                    @Html.ActionLink("Ofertas", "Ofertas", "Administrador")
                </li>
                <li class="nav-item ml-3">
                    @Html.ActionLink("Agregar", "Crear2", "Administrador")
                </li>

                <li class="nav-item ml-3">
                    @Html.ActionLink("Cerrar Sesion", "Logout", "Account")
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content mt-5">
        <form method="post" action="@Url.Action("Crear2", "Administrador")">
            <div class="mb-3">
                <label for="NombreProducto" class="form-label">Nombre Producto</label>
                <input type="text" id="NombreProducto" name="NombreProducto" class="form-control" />
                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>

            <div class="mb-3">
                <label for="TipoProducto" class="form-label">Tipo Producto</label>
                <input type="text" id="TipoProducto" name="TipoProducto" class="form-control" />

                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>


            <div class="mb-3">
                <label for="FechaIngreso" class="form-label">Fecha Ingreso</label>
                <input type="datetime-local" id="FechaIngreso" name="FechaIngreso" class="form-control" />

                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>




            <div class="mb-3 ">
                <label for="TiempoDevolucion" class="form-label">Tiempo Devolucion</label>
                <input type="datetime-local" id="TiempoDevolucion" name="TiempoDevolucion" class="form-control" />
            </div>

            <div class="mb-3 ">
                <label for="ValorCalculado" class="form-label">Valor Calculado</label>
                <input type="number" id="ValorCalculado" name="ValorCalculado" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>

        </form>
    </div>




</body>
</html>
