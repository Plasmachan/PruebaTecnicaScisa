@model PruebaTecnica.Models.Producto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top mb-3">
        <a class="navbar-brand">Administrador</a>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="nav-item active ml-3">
                    @Html.ActionLink("Devoluciones", "Index", "Administrador")
                </li>
                <li class="nav-item ml-3">
                    @Html.ActionLink("Ofertas", "Ofertas", "Administrador")
                </li>
                <li class="nav-item ml-3">
                    @Html.ActionLink("Agregar", "Crear2", "Administrador")
                </li>

                <li class="nav-item ml-3">
                    @Html.ActionLink("Cerrar Sesion", "Logout", "Account")
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content mt-5">
        <form method="post" action="@Url.Action("Editar", "Administrador")">
            @Html.HiddenFor(model => model.IdProducto)
            <div class="mb-3">
                @*<label for="NombreProducto" class="form-label">Nombre Producto</label>
            <input type="text" id="NombreProducto" name="NombreProducto" class="form-control" />*@

                @Html.LabelFor(model => model.NombreProducto)
                @Html.TextBoxFor(model => model.NombreProducto, new { @class = "form-control input-sm" })
                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>

            <div class="mb-3">
                @*<label for="TipoProducto" class="form-label">Tipo Producto</label>
            <input type="text" id="TipoProducto" name="TipoProducto" class="form-control" />*@

                @Html.LabelFor(model => model.TipoProducto)
                @Html.TextBoxFor(model => model.TipoProducto, new { @class = "form-control input-sm" })

                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>


            <div class="mb-3">
                @*<label for="FechaIngreso" class="form-label">Fecha Ingreso</label>
            <input type="datetime-local" id="FechaIngreso" name="FechaIngreso" class="form-control" />*@

                @Html.LabelFor(model => model.FechaIngreso)
                @Html.TextBoxFor(model => model.FechaIngreso, "{0:s}", new { @class = "form-control input-sm", placeholder = "OpeningDoor", type = "datetime-local" })

                @*@Html.TextBoxFor(model => model.FechaIngreso, new { @type = "datetime-local", @class = "form-control input-sm" })*@
            </div>




            <div class="mb-3 ">


                @Html.LabelFor(model => model.TiempoDevolucion)
                @Html.TextBoxFor(model => model.TiempoDevolucion, "{0:s}", new { @class = "form-control input-sm", placeholder = "OpeningDoor", type = "datetime-local" })
                @*<label for="TiempoDevolucion" class="form-label">Tiempo Devolucion</label>
            <input type="datetime-local" id="TiempoDevolucion" name="TiempoDevolucion" class="form-control" />*@
            </div>


            <div class="mb-3 ">
                @Html.LabelFor(model => model.ValorCalculado)
                @Html.TextBoxFor(model => model.ValorCalculado, new { @class = "form-control input-sm", type = "number" })
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>

        </form>
    </div>

</body>
</html>
