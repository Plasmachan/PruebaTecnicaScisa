@model PruebaTecnica.Models.Producto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container body-content">
        <form method="post" action="@Url.Action("Editar", "Administrador")">
            <div class="mb-3">
                @*<label for="NombreProducto" class="form-label">Nombre Producto</label>
                <input type="text" id="NombreProducto" name="NombreProducto" class="form-control" />*@

                @Html.LabelFor(model => model.NombreProducto)
                @Html.TextBoxFor(model => model.NombreProducto, new { @class = "form-control input-sm" })
                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>

            <div class="mb-3">
                @*<label for="TipoProducto" class="form-label">Tipo Producto</label>
                <input type="text" id="TipoProducto" name="TipoProducto" class="form-control" />*@

                @Html.LabelFor(model => model.TipoProducto)
                @Html.TextBoxFor(model => model.TipoProducto, new { @class = "form-control input-sm" })

                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>


            <div class="mb-3">
                @*<label for="FechaIngreso" class="form-label">Fecha Ingreso</label>
                <input type="datetime-local" id="FechaIngreso" name="FechaIngreso" class="form-control" />*@

                @Html.LabelFor(model => model.FechaIngreso)
                @Html.TextBoxFor(model => model.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "datetime-local" })

                @*<span asp-validation-for="persona.Nombre" class="text-danger"></span>*@
            </div>




            <div class="mb-3 ">
                <label for="TiempoDevolucion" class="form-label">Tiempo Devolucion</label>
                <input type="datetime-local" id="TiempoDevolucion" name="TiempoDevolucion" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>

        </form>
    </div>

</body>
</html>
