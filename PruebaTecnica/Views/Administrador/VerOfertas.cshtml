@model List<PruebaTecnica.Models.Oferta>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VerOfertas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
        <a class="navbar-brand">Administrador</a>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="nav-item active ml-3">
                    @Html.ActionLink("Devoluciones", "Index", "Administrador")
                </li>
                <li class="nav-item ml-3">
                    @Html.ActionLink("Ofertas", "Ofertas", "Administrador")
                </li>
                <li class="nav-item ml-3">
                    @Html.ActionLink("Agregar", "Crear2", "Administrador")
                </li>

                <li class="nav-item ml-3">
                    @Html.ActionLink("Cerrar Sesion", "Logout", "Account")
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Nombre</th>
                    <th>Numero Ofertante</th>
                    <th>Monto</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>

            

                    @foreach (var Oferta in Model)
                    {
                        <tr>

                            <td>
                               
                                    <button class="btn btn-primary OfertaGanadora" onclick="location.href='@Url.Action("OfertaGanadora", "Administrador", new { id = @Oferta.IdOferta})'"></button>
                                     
                            </td>


                            <td>
                                @Oferta.Ofertante
                            </td>

                            <td>
                                @Oferta.NumeroOfertante
                            </td>

                            <td>
                                @Oferta.MontoOferta
                            </td>
                            <td>
                                Disponible
                            </td>

                        </tr>
                    }


                






            </tbody>

        </table>
    </div>
</body>
</html>

